@model IEnumerable<GearItem>

<h2 class="mb-4">Екипировка</h2>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" style="height: 200px; object-fit: cover;" />
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Description</p>
                    <p class="fw-bold">@item.Price лв.</p>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Детайли</a>
                </div>
            </div>
        </div>
    }
</div>
