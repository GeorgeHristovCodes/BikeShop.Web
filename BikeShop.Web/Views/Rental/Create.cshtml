@model BikeShop.Web.Models.Rental
@{
    ViewData["Title"] = "Наеми велосипед";
    var bike = ViewBag.Bicycle as BikeShop.Web.Models.Bicycle;
}

<h2 class="mb-4">Наеми: @bike?.Name</h2>

@if (!string.IsNullOrEmpty(bike?.ImageUrl))
{
    <img src="@bike.ImageUrl" class="img-thumbnail mb-3" style="max-height:200px;" />
}

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="BicycleId" />

    <div class="mb-3">
        <label asp-for="StartDate" class="form-label">Начална дата</label>
        <input asp-for="StartDate" type="date" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="EndDate" class="form-label">Крайна дата</label>
        <input asp-for="EndDate" type="date" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-warning">Потвърди наем</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
