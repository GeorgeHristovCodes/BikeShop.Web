@model BikeShop.Web.Models.Order
@{
    ViewData["Title"] = "Потвърди покупка";
    var bike = ViewBag.Bicycle as BikeShop.Web.Models.Bicycle;
}

<h2 class="mb-4">Поръчка на: @bike?.Name</h2>

@if (!string.IsNullOrEmpty(bike?.ImageUrl))
{
    <img src="@bike.ImageUrl" class="img-thumbnail mb-3" style="max-height:200px;" />
}

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="BicycleId" />
    <input type="hidden" asp-for="TotalPrice" />

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <label class="form-label">Цена: </label>
        <span class="fw-bold">@bike?.Price лв.</span>
    </div>

    <div class="mb-3">
        <label asp-for="Address" class="form-label">Адрес за доставка</label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Потвърди поръчка</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
