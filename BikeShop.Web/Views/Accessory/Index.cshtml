@model IEnumerable<BikeShop.Web.Models.Accessory>

@{
    ViewData["Title"] = "Аксесоари";
}

<h2 class="text-2xl font-bold mb-4">Всички аксесоари</h2>

<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
    @foreach (var item in Model)
    {
        <div class="border rounded-lg p-4 shadow hover:shadow-lg">
            <img src="@item.ImageUrl" alt="@item.Name" class="w-full h-48 object-cover rounded mb-2" />
            <h3 class="text-lg font-semibold">@item.Name</h3>
            <p class="text-sm text-gray-500">@item.Brand</p>
            <p class="font-bold text-green-600">@item.Price лв.</p>
            <a href="@Url.Action("Details", "Accessory", new { id = item.Id })" class="text-blue-600 underline mt-2 inline-block">Детайли</a>
        </div>
    }
</div>
