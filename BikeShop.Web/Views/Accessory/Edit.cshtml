@model BikeShop.Web.Models.Accessory

@{
    ViewData["Title"] = "Редактирай аксесоар";
}

<h2 class="text-2xl font-bold mb-4">Редактиране на аксесоар</h2>

<form asp-action="Edit" method="post" class="space-y-4">
    <input type="hidden" asp-for="Id" />

    <div>
        <label asp-for="Name" class="block font-semibold">Име</label>
        <input asp-for="Name" class="w-full border rounded p-2" />
        <span asp-validation-for="Name" class="text-red-500"></span>
    </div>

    <div>
        <label asp-for="Description" class="block font-semibold">Описание</label>
        <textarea asp-for="Description" class="w-full border rounded p-2"></textarea>
    </div>

    <div>
        <label asp-for="Price" class="block font-semibold">Цена</label>
        <input asp-for="Price" class="w-full border rounded p-2" />
        <span asp-validation-for="Price" class="text-red-500"></span>
    </div>

    <div>
        <label asp-for="Brand" class="block font-semibold">Бранд</label>
        <input asp-for="Brand" class="w-full border rounded p-2" />
        <span asp-validation-for="Brand" class="text-red-500"></span>
    </div>

    <div>
        <label asp-for="Category" class="block font-semibold">Категория</label>
        <select asp-for="Category" asp-items="Html.GetEnumSelectList<BikeShop.Web.Models.AccessoryCategory>()" class="w-full border rounded p-2"></select>
    </div>

    <div>
        <label asp-for="ImageUrl" class="block font-semibold">Път до изображение</label>
        <input asp-for="ImageUrl" class="w-full border rounded p-2" />
    </div>

    <div>
        <label asp-for="Stock" class="block font-semibold">Наличност</label>
        <input asp-for="Stock" class="w-full border rounded p-2" />
    </div>

    <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700">Запази</button>
</form>

<a asp-action="Index" class="text-blue-600 underline mt-4 inline-block">← Назад</a>
